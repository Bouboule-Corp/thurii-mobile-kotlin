<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.mapbox.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_locationComponentEnabled="true"
        android:layout_marginBottom="55dp"
        mapbox:mapbox_cameraTargetLat="45.75"
        mapbox:mapbox_cameraTargetLng="4.85"
        mapbox:mapbox_cameraZoom="5.0"
    />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/horizontal_caroussel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        mapbox:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        mapbox:layout_constraintBottom_toBottomOf="@+id/mapView"
        mapbox:layout_constraintEnd_toEndOf="parent"
        mapbox:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
