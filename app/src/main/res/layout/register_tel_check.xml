<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0F0F"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/register_tel_layout">

    <ImageButton
        android:id="@+id/backbtn"
        android:contentDescription="@string/back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="22dp"
        android:layout_marginStart="15dp"
        android:onClick="goToRegisterMail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_back"
        android:background="?android:selectableItemBackground"
        />

    <TextView
        android:id="@+id/title_my_code"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/my_code"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        android:layout_marginStart="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backbtn" />

    <TextView
        android:id="@+id/numero_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numero"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:layout_marginStart="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_my_code" />

    <LinearLayout
        android:id="@+id/code_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/resend_code_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/code_first"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:background="@drawable/register_down_border"
            android:cursorVisible="false"
            android:enabled="false"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:maxLength="1"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="45px"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/code_second"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/register_down_border"
            android:cursorVisible="false"
            android:enabled="false"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:maxLength="1"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="45px"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/code_third"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/register_down_border"
            android:cursorVisible="false"
            android:enabled="false"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:maxLength="1"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="45px"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/code_fourth"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/register_down_border"
            android:cursorVisible="false"
            android:enabled="false"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:maxLength="1"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="45px"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/code_fifth"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/register_down_border"
            android:cursorVisible="false"
            android:enabled="false"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:maxLength="1"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="45px"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/code_sixth"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/register_down_border"
            android:cursorVisible="false"
            android:enabled="false"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:maxLength="1"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="45px"
            android:textStyle="bold" />
    </LinearLayout>



    <Button
        android:id="@+id/resend_code_btn"
        style="@style/ButtonStroke"
        android:text="@string/resend"
        android:textColor="@color/white"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/continueBtnTelAuth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/continueBtnTelAuth"
        style="@style/ButtonGreyStyle"
        android:text="@string/btn_continue"
        android:textColor="@color/white"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toTopOf="@+id/condition_politic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/condition_politic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="25dp"
        android:text="@string/condition_politic"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>