<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0F0F">

    <TextView
        android:id="@+id/gender_title"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:lineSpacingExtra="4dp"
        android:text="@string/register_sport_title"
        android:textColor="#EBF5F9"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/register_up_down_border"/>

    <TextView
        android:id="@+id/gender_des"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="16dp"
        android:text="@string/register_sport_des"
        android:textColor="#EBF5F9"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gender_title" />


    <LinearLayout
        android:id="@+id/first_choice_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gender_des"
        android:background="@drawable/register_up_down_border"
        >

        <TextView
            android:id="@+id/first_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            android:layout_weight="1"
            android:text="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_choice_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="332dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_choice_layout"
        android:background="@drawable/register_up_down_border"
        >

        <TextView
            android:id="@+id/second_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            android:layout_weight="1"
            android:text="2"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/third_choice_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="251dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/second_choice_layout"
        android:background="@drawable/register_up_down_border"
        >

        <TextView
            android:id="@+id/third_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="3"
            android:paddingVertical="15dp"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/icon_select"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/third_choice_layout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_rando"
                android:layout_width="91dp"
                android:layout_height="91dp"
                android:alpha="0.4"
                android:background="?android:selectableItemBackground"
                android:contentDescription="@string/rando"
                android:scaleType="fitCenter"
                android:src="@drawable/register_ic_rando" />

            <TextView
                android:id="@+id/text_rando"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:text="@string/rando"
                android:textAlignment="center"
                android:textColor="#EBF5F9"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Space
            android:layout_width="32dp"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_escalade"
                android:layout_width="91dp"
                android:layout_height="91dp"
                android:alpha="0.4"
                android:background="?android:selectableItemBackground"
                android:contentDescription="@string/escalade"
                android:scaleType="fitCenter"
                android:src="@drawable/register_ic_escalade" />

            <TextView
                android:id="@+id/txt_escalade"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:text="@string/escalade"
                android:textAlignment="center"
                android:textColor="#EBF5F9"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Space
            android:layout_width="32dp"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_snow"
                android:layout_width="91dp"
                android:layout_height="91dp"
                android:alpha="0.4"
                android:background="?android:selectableItemBackground"
                android:contentDescription="@string/snow"
                android:scaleType="fitCenter"
                android:src="@drawable/register_ic_snow" />

            <TextView
                android:id="@+id/txt_snow"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:text="@string/snow"
                android:textAlignment="center"
                android:textColor="#EBF5F9"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>